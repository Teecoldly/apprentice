<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%- include("../../title.ejs") %> </title>
    <!-- base:css -->
    <link rel="stylesheet" href="/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- endinject -->

    <link rel="shortcut icon" href="/images/favicon.png" />
    <link href="/fonts/fontawesome-free-5.13.0-web/css/fontawesome.css" rel="stylesheet">
    <link href="/fonts/fontawesome-free-5.13.0-web/css/brands.css" rel="stylesheet">
    <link href="/fonts/fontawesome-free-5.13.0-web/css/solid.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />

    <script src="/js/jquery.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="/control/admin/committee.js"></script>


    <style>
        td {
            word-break: break-all;
        }

        .sale-red:after {
            content: '';
            height: 5px;
            width: 100%;
            border-radius: 0 0 6px 6px;
            background-color: red;
            position: absolute;
            left: 0;
            bottom: 0;
        }

        .sale-pink:after {
            content: '';
            height: 5px;
            width: 100%;
            border-radius: 0 0 6px 6px;
            background-color: pink;
            position: absolute;
            left: 0;
            bottom: 0;
        }

        .sale-green:after {
            content: '';
            height: 5px;
            width: 100%;
            border-radius: 0 0 6px 6px;
            background-color: green;
            position: absolute;
            left: 0;
            bottom: 0;
        }

        .sale-black:after {
            content: '';
            height: 5px;
            width: 100%;
            border-radius: 0 0 6px 6px;
            background-color: black;
            position: absolute;
            left: 0;
            bottom: 0;
        }

        .locksize {
            width: 50%;
            min-width: 20em;
            /* Will be AT LEAST 20em wide */
        }
    </style>
</head>

<body>
    <div class="container-scroller">

        <!-- partial:partials/_horizontal-navbar.html -->
        <div class="horizontal-menu">
            <nav class="navbar top-navbar col-lg-12 col-12 p-0">
                <div class="container-fluid">
                    <div class="navbar-menu-wrapper d-flex align-items-center justify-content-between">
                        <ul class="navbar-nav navbar-nav-left">
                            <div
                                class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                                <a class="navbar-brand brand-logo" href="/">CRS System</a>
								<a class="navbar-brand brand-logo-mini" href="/"> CRS System</a>
                            </div>
                        </ul>
                        <%- include('../../nav_user',{name:name}) %>

                        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                            data-toggle="horizontal-menu-toggle">
                            <span class="mdi mdi-menu"></span>
                        </button>
                    </div>
                </div>
            </nav>
            <nav class="bottom-navbar">
                <%- include('../../menubar',{level:level}) %> 
            </nav>
        </div>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row mt-3">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">กลุ่มสอบกับกรรมการ

                                    </h4>

                                    <p class="card-description">
                                        จัดการการสอบ
                                    </p>
                                    <div class="table-responsive">
                                        <table class="table table-striped text-center " id="event-table">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        ลำดับ
                                                    </th>
                                                    <th>
                                                        กลุ่ม
                                                    </th>
                                                    <th>
                                                        ที่ปรึกษา
                                                    </th>
                                                    <th>
                                                        รายงานการสอบ
                                                    </th>
                                                    <th>
                                                        เครื่องมือ
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% let i = 1 %>
                                                <% group_list.forEach(element => { %>
                                                <tr>
                                                    <td class="align-middle"><%= i++ %> </td>
                                                    <td class="align-middle"><%= element.project_name %> </td>
                                                    <td class="align-middle"><%= element.pro_name %> </td>
                                                    <td class="align-middle"><button type="button"
                                                        data-toggle="modal"
                                                        data-target="#show_comment"
                                                            class="btn btn-success"
                                                            data-project_id="<%= element.project_id %>" id="show_event_comment_add"><i
                                                                class="fas fa-clipboard"></i></button></td>
                                                    <td class="align-middle"><button type="button"
                                                            class="btn btn-primary" data-toggle="modal"
                                                            data-target="#comment_add"
                                                            data-project_id="<%= element.project_id %>"
                                                            id="comment_add_click"><i
                                                                class="fas fa-notes-medical"></i></button></td>

                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            
        </div>
        <%- include('../../footter') %> 
    </div>
    <!-- content-wrapper ends -->

    <!-- container-scroller -->
    <!-- base:js -->
    <script src="vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="js/template.js"></script>
    <!-- endinject -->
    <!-- plugin js for this page -->
  

    <!-- Font Awesome -->

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script src="/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <div class="modal fade bd-example-modal-lg" id="comment_add" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">ส่งการสอบ</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="comment_event_list">เลือกวันส่งการสอบ</label>
                        <select id="comment_event_list" style="width: 100%">
                            <option value="NULL">กรุณาเลือก</option>
                        </select>
                        <small id="helpId" class="form-text text-danger">** จะบันทึกได้แค่ครั้งเดียว</small>
                    </div>
                    <div class="form-group">
                        <label for="">คะแนนสอบ</label>
                        <input type="number" class="form-control" min="0" id="add_score" aria-describedby="helpId"
                            placeholder="กรุณากรอกคะแนนสอบ">
                        <small id="helpId" class="form-text text-danger">** จะบันทึกได้แค่ครั้งเดียว</small>
                    </div>
                    <div class="form-group">
                        <label for="">คอมเม้นการสอบ</label>
                        <textarea class="form-control" id="add_comment_text" rows="4"
                            placeholder="กรุณากรอกคอมเม้นการสอบ"></textarea>
                        <small id="helpId" class="form-text text-danger">** จะบันทึกได้แค่ครั้งเดียว</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">ปิด</button>
                    <button type="button" class="btn btn-primary" id="submit_comment">บันทึก</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade bd-example-modal-lg" id="show_comment" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">ผลการสอบโครงการ</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-striped text-center " id="event-table">
                        <thead>
                            <tr>
                                <th>
                                    ครั้งที่
                                </th>
                                <th>
                                    วันเวลาสอบ
                                </th>
                                <th>
                                    ผลคะแนน
                                </th>
                                <th>
                                    คอมเม้น
                                </th>
                            </tr>
                        </thead>
                        <tbody id="body_show_event">

                        </tbody>
                    </table>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">ปิด</button>
 
                </div>
            </div>
        </div>
    </div>
    <%- 
		include("../setting")
	 %>  
    <!-- End custom js for this page-->
</body>

</html>