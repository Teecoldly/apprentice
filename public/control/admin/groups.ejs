    <div class="modal fade" id="Director_add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">เพิ่มกลุ่มกรรมการ</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="professor_1">กรรมการ คนที่ 1 : </label>
                        <select class="form-control" id="professor_1" style="width: 100%">

                            <%  professor_data.forEach(element => { %>
                            <option value="<%= element.user_id %>"><%= element.name+" "+element.lastname %> </option>
                            <% }) %>

                        </select>
                    </div>
                    <div class="form-group">
                        <label for="professor_2">กรรมการ คนที่ 2 : </label>
                        <select class="form-control" id="professor_2" style="width: 100%">
                            <%  professor_data.forEach(element => { %>
                            <option value="<%= element.user_id %>"><%= element.name+" "+element.lastname %> </option>
                            <% }) %>

                        </select>
                    </div>
                    <div class="form-group">
                        <label for="professor_3">กรรมการ คนที่ 3 : </label>
                        <select class="form-control" id="professor_3" style="width: 100%">
                            <%  professor_data.forEach(element => { %>
                            <option value="<%= element.user_id %>"><%= element.name+" "+element.lastname %> </option>
                            <% }) %>

                        </select>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">ปิด</button>
                    <button type="button" class="btn btn-primary" id="save_group">บันทึก</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="Director_edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">เพิ่มกลุ่มกรรมการ</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
