                        </button>
                    </div>
                </div>
            </nav>
            <nav class="bottom-navbar">
                <%- include('../../menubar',{level:level}) %> 
            </nav>
        </div>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row mt-3">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">กรรมการ
                                        <div class="float-right mr-auto">

                                            <button type="button" class="btn btn-info" data-toggle="modal"
                                                data-target="#Director_add" id="Director_open"><i
                                                    class="fas fa-user-plus"></i></button>
                                        </div>
                                    </h4>

                                    <p class="card-description">
                                        จัดการกรรมการ
                                    </p>
                                    <div class="table-responsive">
                                        <table class="table table-striped text-center " id="professor-table">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        กลุ่มที่
                                                    </th>
                                                    <th>
                                                        ชื่อกรรมการคนที่ 1
                                                    </th>
                                                    <th>
                                                        ชื่อกรรมการคนที่ 2
                                                    </th>
                                                    <th>
                                                        ชื่อกรรมการคนที่ 3
                                                    </th>
                                                    <th>
                                                        เครื่องมือ
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% group.forEach(element => { %>
                                                <tr>
                                                    <td class="align-middle"><%= element.group_id  %> </td>
                                                    <td class="align-middle"><%=  element.dir_1 %> </td>
                                                    <td class="align-middle"><%=  element.dir_2 %> </td>
                                                    <td class="align-middle"><%=  element.dir_3 %> </td>
                                                    <td class="align-middle"><button type="button"
                                                            class="btn btn-primary" data-toggle="modal"
                                                            data-target="#Director_edit" id="Director_edit_show"
                                                            data-groupid="<%= element.group_id %>"
                                                            data-dir_1="<%= element.Director_1 %>"
                                                            data-dir_2="<%= element.Director_2 %>"
                                                            data-dir_3="<%= element.Director_3 %>"><i
                                                                class="fas fa-cog"></i></button></td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title ">กลุ่มโครงการ
                                        <div class="float-right mr-auto">
                                            <button type="button" class="btn btn-info" id="radon_group"><i
                                                    class="fas fa-random"></i>
                                            </button>
                                        </div>
                                    </h4>

                                    <p class="card-description">
                                        กลุ่มโครงการการสอบกลุ่มกรรมการ
                                    </p>
                                    <div class="table-responsive">
                                        <table class="table table-striped text-center " id="project_group">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        กลุ่มที่
                                                    </th>
                                                    <th>
                                                        ชื่อโครงการ
                                                    </th>
                                                    <th>
                                                        ชื่อที่ปรึกษา
                                                    </th>
                                                    <th>
                                                        กลุ่มคณะกรรมการ
                                                    </th>
                                                    <th>
                                                        เครื่องมือ
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%  let i = 1 ;%>
                                                <% group_student.forEach(element => { %>
                                                <tr>
                                                    <td class="align-middle"><%= i++; %> </td>
                                                    <td class="align-middle"><%=  element.project_name %> </td>
                                                    <td class="align-middle"><%=  element.name %> </td>
                                                    <td class="align-middle"><%=  element.gruop %> </td>
                                                    <td class="align-middle">
                                                        <button type="button" class="btn btn-danger" data-toggle="modal"
                                                            data-target="#group_edit"
                                                            data-project="<%= element.project_id %>"
                                                            data-groupid="<%= element.gruop %>" id="open_edit_group">
                                                            <i class="fas fa-cog"></i></button>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <%- include('../../footter') %> 
        <!-- partial -->
    </div>
